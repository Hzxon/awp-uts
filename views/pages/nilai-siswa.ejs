<%- include('../partials/header', { title: 'Kelola Nilai Siswa' }) %>

<div class="flex h-screen bg-gray-100">
    <%- include('../partials/sidebar', { user, active: 'master-siswa' }) %>

    <div class="flex-1 flex flex-col overflow-hidden">
        <%- include('../partials/topbar', { user, pageTitle: 'Kelola Nilai Siswa' }) %>

        <main class="flex-1 p-6 overflow-y-auto space-y-6">
            <% const encodedName = encodeURIComponent(student.name); %>

            <div>
                <a href="/master-siswa" class="inline-flex items-center text-sm text-blue-600 hover:text-blue-700">
                    <i data-lucide="arrow-left" class="w-4 h-4 mr-2"></i> Kembali ke Master Siswa
                </a>
            </div>

            <div class="bg-white rounded-xl shadow-md p-6">
                <h2 class="text-lg font-semibold text-gray-800 mb-4">Informasi Siswa</h2>
                <dl class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
                    <div>
                        <dt class="text-gray-500">Nama Lengkap</dt>
                        <dd class="text-gray-900 font-medium"><%= student.name %></dd>
                    </div>
                    <div>
                        <dt class="text-gray-500">Kelas</dt>
                        <dd class="text-gray-900 font-medium"><%= student.class || '-' %></dd>
                    </div>
                    <div>
                        <dt class="text-gray-500">Email</dt>
                        <dd class="text-gray-900 font-medium"><%= student.email || '-' %></dd>
                    </div>
                </dl>
                <p class="mt-4 text-xs text-gray-500">Nilai kelulusan minimal saat ini: <span class="font-semibold text-gray-700"><%= passingGrade %></span></p>
            </div>

            <% if (message && message.error) { %>
                <div class="bg-red-100 border border-red-200 text-red-700 px-4 py-3 rounded-lg">
                    <p class="text-sm font-medium"><%= message.error %></p>
                </div>
            <% } %>

            <% if (message && message.success) { %>
                <div class="bg-emerald-100 border border-emerald-200 text-emerald-700 px-4 py-3 rounded-lg">
                    <p class="text-sm font-medium"><%= message.success %></p>
                </div>
            <% } %>

            <div class="bg-white rounded-xl shadow-md p-6">
                <div class="flex items-center justify-between mb-4">
                    <h2 class="text-lg font-semibold text-gray-800">Daftar Mata Pelajaran</h2>
                    <span class="text-xs text-gray-400">Klik hapus untuk menghapus nilai.</span>
                </div>

                <% if (!subjects.length) { %>
                    <p class="text-sm text-gray-500">Belum ada mata pelajaran yang tercatat untuk siswa ini.</p>
                <% } else { %>
                    <div class="overflow-x-auto">
                        <table class="min-w-full text-sm text-left text-gray-600">
                            <thead class="text-xs uppercase bg-gray-50 text-gray-700">
                                <tr>
                                    <th class="px-4 py-3">#</th>
                                    <th class="px-4 py-3">Mata Pelajaran</th>
                                    <th class="px-4 py-3">Nilai</th>
                                    <th class="px-4 py-3">Status</th>
                                    <th class="px-4 py-3">Catatan</th>
                                    <th class="px-4 py-3 text-center">Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% subjects.forEach((subject, index) => { %>
                                    <tr class="border-b last:border-b-0">
                                        <td class="px-4 py-3 text-gray-500"><%= index + 1 %></td>
                                        <td class="px-4 py-3 font-medium text-gray-900"><%= subject.name %></td>
                                        <td class="px-4 py-3"><%= subject.score !== null && subject.score !== undefined ? subject.score : '-' %></td>
                                        <td class="px-4 py-3">
                                            <% const badgeClass = subject.status === 'Lulus' ? 'bg-green-100 text-green-700' : subject.status === 'Remedial' ? 'bg-red-100 text-red-700' : 'bg-gray-100 text-gray-700'; %>
                                            <span class="px-2 py-1 text-xs font-semibold rounded-full <%= badgeClass %>"><%= subject.status %></span>
                                        </td>
                                        <td class="px-4 py-3"><%= subject.note || '-' %></td>
                                        <td class="px-4 py-3 text-center">
                                            <form action="/master-siswa/<%= encodedName %>/subjects/<%= subject.index %>/delete" method="POST" onsubmit="return confirm('Hapus mata pelajaran ini?');" class="inline">
                                                <button type="submit" class="px-3 py-1 text-xs font-medium text-red-600 bg-red-100 rounded-lg hover:bg-red-200">Hapus</button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>

            <div class="bg-white rounded-xl shadow-md p-6">
                <h2 class="text-lg font-semibold text-gray-800 mb-4">Tambah Mata Pelajaran</h2>
                <form action="/master-siswa/<%= encodedName %>/subjects" method="POST" class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="md:col-span-1">
                        <label class="block text-sm font-medium text-gray-700">Nama Mata Pelajaran <span class="text-red-500">*</span></label>
                        <input type="text" name="subjectName" class="mt-1 w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-blue-500 focus:border-blue-500" placeholder="Contoh: Matematika" required>
                    </div>
                    <div class="md:col-span-1">
                        <label class="block text-sm font-medium text-gray-700">Nilai (0-100)</label>
                        <input type="number" name="score" min="0" max="100" step="1" class="mt-1 w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-blue-500 focus:border-blue-500" placeholder="80">
                    </div>
                    <div class="md:col-span-2">
                        <label class="block text-sm font-medium text-gray-700">Catatan (opsional)</label>
                        <textarea name="note" rows="3" class="mt-1 w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-blue-500 focus:border-blue-500" placeholder="Catatan tambahan untuk mata pelajaran ini"></textarea>
                        <p class="mt-2 text-xs text-gray-500">Status akan ditentukan otomatis berdasarkan nilai dan ambang kelulusan.</p>
                    </div>
                    <div class="md:col-span-2 flex justify-end space-x-3">
                        <button type="reset" class="px-4 py-2 text-sm font-medium text-gray-600 bg-gray-200 rounded-lg hover:bg-gray-300">Reset</button>
                        <button type="submit" class="px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700">Simpan</button>
                    </div>
                </form>
            </div>
        </main>
    </div>
</div>

<%- include('../partials/footer') %>
