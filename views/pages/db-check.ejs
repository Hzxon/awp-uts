<%- include('../partials/header', { title: 'DB Check' }) %>

<div class="p-6">
  <h1 class="text-2xl font-bold mb-4">Database Check</h1>

  <% if (error) { %>
    <div class="bg-red-100 text-red-700 p-3 rounded mb-4">
      <strong>Gagal konek:</strong> <%= error %>
    </div>
  <% } else { %>
    <div class="bg-green-100 text-green-700 p-3 rounded mb-4">
      Koneksi OK (SELECT 1 = <%= ok %>)
    </div>
    <p>Total baris di <code>ms_student</code>: <strong><%= count %></strong></p>
  <% } %>
</div>

<%- include('../partials/footer') %>
