<%- include('../partials/header', { title: 'Nilai Siswa' }) %>

<div class="flex h-screen bg-gray-100">
    <%- include('../partials/sidebar', { user, active: 'nilai-siswa' }) %>

    <div class="flex-1 flex flex-col overflow-hidden">
        <%- include('../partials/topbar', { user, pageTitle: 'Nilai Siswa' }) %>

        <main class="flex-1 p-6 overflow-y-auto space-y-6">
            <div class="flex items-center justify-between">
                <h2 class="text-lg font-semibold text-gray-800">Ringkasan Nilai</h2>
                <p class="text-xs text-gray-500">Ambang kelulusan: <span class="font-semibold text-gray-700"><%= passingGrade %></span></p>
            </div>

            <% if (!summaries.length) { %>
                <div class="bg-white rounded-xl shadow-md p-6 text-center text-gray-500">
                    Belum ada data siswa terdaftar.
                </div>
            <% } else { %>
                <div class="bg-white rounded-xl shadow-md">
                    <div class="overflow-x-auto">
                        <table class="min-w-full text-sm text-left text-gray-600">
                            <thead class="text-xs uppercase bg-gray-50 text-gray-700">
                                <tr>
                                    <th class="px-4 py-3">Nama</th>
                                    <th class="px-4 py-3">Kelas</th>
                                    <th class="px-4 py-3 text-center">Mapel</th>
                                    <th class="px-4 py-3 text-center">Rata-Rata</th>
                                    <th class="px-4 py-3 text-center">Lulus</th>
                                    <th class="px-4 py-3 text-center">Remedial</th>
                                    <th class="px-4 py-3">Terakhir Diperbarui</th>
                                    <th class="px-4 py-3 text-right">Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% summaries.forEach((row) => { %>
                                    <tr class="border-b last:border-b-0">
                                        <td class="px-4 py-3 font-medium text-gray-900"><%= row.student.name %></td>
                                        <td class="px-4 py-3"><%= row.student.class || '-' %></td>
                                        <td class="px-4 py-3 text-center">
                                            <span class="inline-flex items-center justify-center px-3 py-1 text-xs font-semibold rounded-full <%= row.totalSubjects ? 'bg-blue-100 text-blue-700' : 'bg-gray-100 text-gray-600' %>">
                                                <%= row.totalSubjects %>
                                            </span>
                                        </td>
                                        <td class="px-4 py-3 text-center"><%= row.averageScore !== null ? row.averageScore : '-' %></td>
                                        <td class="px-4 py-3 text-center"><%= row.passedCount %></td>
                                        <td class="px-4 py-3 text-center text-red-600"><%= row.remedialCount %></td>
                                        <td class="px-4 py-3">
                                            <%= row.latestUpdate ? new Date(row.latestUpdate).toLocaleString('id-ID', { dateStyle: 'medium', timeStyle: 'short' }) : '-' %>
                                        </td>
                                        <td class="px-4 py-3 text-right">
                                            <a href="/master-siswa/<%= encodeURIComponent(row.student.name) %>/subjects" class="inline-flex items-center px-3 py-1 text-xs font-medium text-white bg-emerald-600 rounded-lg hover:bg-emerald-700">
                                                Kelola Nilai
                                            </a>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            <% } %>
        </main>
    </div>
</div>

<%- include('../partials/footer') %>
